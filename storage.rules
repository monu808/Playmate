rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is owner
    function isOwner() {
      return isAuthenticated() && 
             get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }
    
    // Helper function to validate image file
    function isValidImage() {
      return request.resource.size < 5 * 1024 * 1024 && // Max 5MB
             request.resource.contentType.matches('image/.*');
    }
    
    // Turf images and profile images - Allow authenticated users, owners, and admins
    match /turfs/{allImages=**} {
      allow read: if true; // Public read for all turf images and profiles
      allow write: if isAuthenticated() && isValidImage(); // Any authenticated user can upload
      allow delete: if isAuthenticated() && (isAdmin() || isOwner()); // Only admins and owners can delete
    }
    
    // Profile images - Allow users to upload their own profile images
    match /profiles/{userId}/{allImages=**} {
      allow read: if true; // Public read for profile images
      allow write: if isAuthenticated() && 
                     (request.auth.uid == userId || isAdmin()) && 
                     isValidImage(); // Users can upload their own, admins can upload any
      allow delete: if isAuthenticated() && 
                      (request.auth.uid == userId || isAdmin()); // Users can delete their own
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
