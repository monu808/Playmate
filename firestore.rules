rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(ownerId) {
      return isAuthenticated() && request.auth.uid == ownerId;
    }
    
    function isOwnerRole() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data and public profiles, admins can read all
      allow read: if isAuthenticated();
      // Users can create their own profile during sign-up
      // Phone auth users may not have email, so we make email check optional
      allow create: if isAuthenticated() && 
                      request.auth.uid == userId &&
                      request.resource.data.uid == userId &&
                      (request.auth.token.email == null || 
                       !('email' in request.resource.data) || 
                       request.resource.data.email == request.auth.token.email);
      // Users can update their own profile (but cannot change role or uid)
      allow update: if isAuthenticated() && 
                      request.auth.uid == userId &&
                      (!('role' in request.resource.data) || request.resource.data.role == resource.data.role) &&
                      (!('uid' in request.resource.data) || request.resource.data.uid == resource.data.uid);
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Turfs collection
    match /turfs/{turfId} {
      // Everyone authenticated can read turfs (for browsing)
      allow read: if true; // Allow public read access to turfs
      
      // Users can create turfs (must set ownerId to their own uid, isVerified=false)
      allow create: if isAuthenticated() && 
                      request.resource.data.ownerId == request.auth.uid &&
                      request.resource.data.isVerified == false;
      
      // Owners can update their own turfs (but cannot change isVerified status)
      allow update: if isAuthenticated() && 
                      resource.data.ownerId == request.auth.uid &&
                      request.resource.data.ownerId == resource.data.ownerId &&
                      request.resource.data.isVerified == resource.data.isVerified;
      
      // Admins can create, update (including verification), or delete any turf
      allow create, update, delete: if isAdmin();
    }
    
    // Bookings collection - CRITICAL FOR SLOT AVAILABILITY
    match /bookings/{bookingId} {
      // âœ… ANYONE authenticated can read bookings (needed to check slot availability)
      // This is ESSENTIAL for the booking system to work
      allow read: if isAuthenticated();
      
      // Users can only create bookings for themselves
      allow create: if isAuthenticated() && 
                      request.auth.uid == request.resource.data.userId;
      
      // Users can update their own bookings
      // Owners can update bookings for their turfs (check turf ownership)
      // Admins can update any booking
      allow update: if isAuthenticated() && 
                      (request.auth.uid == resource.data.userId || 
                       (exists(/databases/$(database)/documents/turfs/$(resource.data.turfId)) &&
                        get(/databases/$(database)/documents/turfs/$(resource.data.turfId)).data.ownerId == request.auth.uid) ||
                       isAdmin());
      
      // Users can delete their own bookings, admins can delete any
      allow delete: if isAuthenticated() && 
                      (request.auth.uid == resource.data.userId || isAdmin());
    }
    
    // Blocked Slots collection - for manual slot locking by owners/admins
    match /blockedSlots/{slotId} {
      // Anyone authenticated can read blocked slots (needed to check slot availability)
      allow read: if isAuthenticated();
      
      // Owners can create blocked slots for their own turfs
      // Admins can create blocked slots for any turf
      allow create: if isAuthenticated() && 
                      (isAdmin() || 
                       (isOwnerRole() && 
                        exists(/databases/$(database)/documents/turfs/$(request.resource.data.turfId)) &&
                        get(/databases/$(database)/documents/turfs/$(request.resource.data.turfId)).data.ownerId == request.auth.uid));
      
      // Owners can delete their own blocked slots, admins can delete any
      allow delete: if isAuthenticated() && 
                      (isAdmin() || 
                       (isOwnerRole() && 
                        exists(/databases/$(database)/documents/turfs/$(resource.data.turfId)) &&
                        get(/databases/$(database)/documents/turfs/$(resource.data.turfId)).data.ownerId == request.auth.uid));
      
      // No updates needed - just delete and recreate if needed
      allow update: if false;
    }
    
    // Analytics collection (admin only)
    match /analytics/{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
